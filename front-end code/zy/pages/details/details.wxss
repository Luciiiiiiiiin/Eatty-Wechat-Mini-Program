/* pages/details/details.wxss */
.details{font-size: 12px;}
.details .head{width: 100%;height: 64px;background-color: #293142;text-align: center;}
.details .head .p1{color: #fff;font-size: 17px;display: inline-block;margin-top: 30px;}
.details .content{margin-top: 15px;}
.details .content .content1{width: 87vw;height: 120px;margin: 0 auto;box-shadow: 1px 1px 10px 5px #eee;border-radius: 15px;}
.details .content .content1 .content1_head{margin: 0 auto;width: 76vw;margin-bottom: 10px;padding-top: 7px;position: relative;}
.details .content .content1 .content1_head .vertical{width: 4px;height: 20px;display: inline-block;background-color: #78DCD4;position: absolute;top: 8px;border-radius: 10px;}
.details .content .content1 .content1_head .span1{margin-left: 10px;font-size: 24.3rpx;}
.details .content .content1 .option{width: 76vw;margin: 0 auto;}
.details .content .content1 .option .ul .li{display: inline-block;position: relative; width: 24vw;margin: 4px 0;}
.details .content .content1 .option .ul .li .option_div .option_span{margin-left: 16px;}
.details .content .content2{width: 87vw;height: 256px;margin: 0 auto;box-shadow: 1px 1px 10px 5px #eee;border-radius: 15px;margin-top:24px;}
.details .content .content2 .content2_head{margin: 0 auto;width: 76vw;margin-bottom: 16px;padding-top: 7px;position: relative;}
.details .content .content2 .content2_head .vertica2{width: 4px;height: 20px;display: inline-block;background-color: #78DCD4;position: absolute;top: 8px;border-radius: 10px;}
.details .content .content2 .content2_head .span2{margin-left: 10px;font-size: 24.3rpx;}
.details .content .content2 .option{width: 76vw;margin: 0 auto;}
.details .content .content2 .option2 .ul{width: 80vw;margin: 0 auto;margin-bottom: 15px;}
.details .content .content2 .option2 .ul .li{display: inline-block;position: relative;}
.details .content .content2 .option2 .option2_view .p{display: inline-block;font-size: 27rpx;}
.details .content .content2 .option2 .option2_view input{position: absolute;top: 7px;}
.details .content .content2 .option2 .option2_view .option2_span{margin-left: 10px;display: inline-block;}
.details .btn{width: 54vw;height: 35px;background-color: #84DDD5;margin: 0 auto;margin-top:5.6vh;border-radius:30px;}
.details .btn a{display: inline-block;width: 100%;height: 100%;text-align: center;}
.details .btn a view{font-size:27rpx;color:#fff;line-height: 35px;}
radio .wx-radio-input{
  width: 20rpx;
  height: 20rpx;
}
checkbox .wx-checkbox-input{
  width: 20rpx;
  height: 20rpx;
}